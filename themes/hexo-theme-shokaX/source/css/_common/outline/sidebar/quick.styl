#quick {
  display: none;
  align-items: center;
  flex-wrap: wrap;
  width: $sidebar-desktop;
  margin: 0;
  padding: 0;
  position: sticky;
  bottom: .125rem;

  li {
    width: 25%;
    min-height: 1.875rem;
    the-transition();

    i {
      cursor: pointer;
    }

    a {
      width: 100%;
      display: block;
    }

    &:hover {
      color: var(--primary-color);
    }
  }

  li.percent {
    display: block;
    background: var(--primary-color);
    width: 0;
    min-height: .125rem;
  }
}

#sidebar.affix, #sidebar.on {
  #quick {
    display: flex;
  }
}

// iPad landscape mode (not tested on macOS Safari)
@media  screen and (min-width: 768px) and (max-width: 1024px) and (orientation: landscape),
        screen and (min-width: 768px) and (max-width: 1366px) and (orientation: landscape) and (-webkit-min-device-pixel-ratio: 2),
        screen and (min-width: 768px) and (max-width: 1440px) and (-webkit-min-device-pixel-ratio: 1) {
  #sidebar {
    overflow: visible;
  }
}

